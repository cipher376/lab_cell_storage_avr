#1/bin/bash
mcu="atmega328"
rm *.elf *.hex *.o;
avr-gcc -g -Os -DF_CPU=1600000 -mmcu=$mcu -c -o $1.o $1.c
#read;
avr-gcc -g -mmcu=$mcu $1.o -o $1.elf
#read;
avr-objcopy -O ihex -R .eeprom $1.elf $1.hex
#read
avrdude -V -F -V -c arduino  -p $mcu  -P /dev/ttyUSB0 -b 115200 -U flash:w:$1.hex
#read

echo  "******************************************************************************"
echo  "******************************************************************************"

echo "*******************************************************************************"
echo "*******************************************************************************"
echo "*******************************************************************************"
echo "*******************************************************************************"
